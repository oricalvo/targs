{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "outDir": "./dist",
        "rootDir": "src",
        "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
    },
    "include": [
        "src/**/*.ts"
    ]
}
